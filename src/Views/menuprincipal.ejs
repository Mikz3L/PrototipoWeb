<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ORQUIGESTIÓN</title>
    <style>
        /* Estilos Globales */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Navbar */
        .navbar {
            background-color: #635ae6;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .navbar-title {
            font-size: 24px;
            font-weight: bold;
            flex-grow: 1;
            text-align: center; /* Centra el título */
        }

        .logout-btn {
            background-color: transparent;
            color: white;
            border: 1px solid white;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .logout-btn:hover {
            background-color: white;
            color: #635ae6;
            transition: 0.3s;
        }

        /* Contenido Principal */
        .content {
            padding: 20px;
            text-align: center;
        }

        /* Sección de Bienvenida */
        .welcome-section h1 {
            color: #555;
            font-size: 28px;
            text-align: center; /* Centra el texto de bienvenida */
        }

        /* Sección del Dashboard */
        .dashboard-section {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .dashboard-container {
            width: 70%;
            height: 500px;
        }

        /* Sección de Botones */
        .buttons-section {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .action-btn {
            background-color: #87CEEB;
            color: white;
            border: none;
            padding: 15px;
            margin: 10px 0;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            text-align: left;
            width: 200px;
        }

        .action-btn:hover {
            background-color: #6AB5E3;
            transition: 0.3s;
        }

        /* Alinear los botones a la derecha del dashboard */
        .buttons-right {
            display: flex;
            flex-direction: column;
            align-items: flex-end; /* Alinea los botones a la derecha */
            margin-left: 20px; /* Espacio entre el gráfico y los botones */
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <form action="/login" method="POST" style="margin-right: auto;">
            <button type="submit" class="logout-btn">Cerrar Sesión</button>
        </form>
        <span class="navbar-title">ORQUIGESTIÓN</span>
        <span class="navbar-notifications" style="margin-left: auto;">Notificaciones</span> <!-- Notificaciones a la derecha -->
    </nav>

    <!-- Main Content -->
    <div class="content">
        <!-- Welcome Section -->
        <section class="welcome-section">
            <h1>BIENVENIDO</h1>
        </section>

        <!-- Dashboard Section -->
        <section class="dashboard-section">
            <div class="dashboard-container">
                <!-- Canvas para el gráfico -->
                <canvas id="sensorChart"></canvas>
            </div>
            <!-- Botones al lado derecho del dashboard -->
            <div class="buttons-right">
                <a href="/programar_riego"><button class="action-btn">Programar Riego</button></a>
                <a href="/registro_riego"><button class="action-btn">Calendario de Riego</button></a>
                <a href="/historial_condiciones"><button class="action-btn">Historial de Condiciones Ambientales</button></a>
                <a href="/configuracion_sensores"><button class="action-btn">Configuración de Sensores</button></a>
            </div>
        </section>
    </div>

    <script>
      // Configuración inicial del gráfico
      const ctx = document.getElementById('sensorChart').getContext('2d');
      const sensorChart = new Chart(ctx, {
          type: 'line',
          data: {
              labels: [],
              datasets: [
                  {
                      label: 'Temperatura (°C)',
                      data: [],
                      borderColor: 'rgba(255, 99, 132, 1)',
                      backgroundColor: 'rgba(255, 99, 132, 0.2)',
                      fill: true,
                  },
                  {
                      label: 'Humedad (%)',
                      data: [],
                      borderColor: 'rgba(54, 162, 235, 1)',
                      backgroundColor: 'rgba(54, 162, 235, 0.2)',
                      fill: true,
                  }
              ]
          },
          options: {
              responsive: true,
              plugins: {
                  legend: {
                      position: 'top',
                  }
              },
              scales: {
                  x: {
                      title: {
                          display: true,
                          text: 'Tiempo'
                      }
                  },
                  y: {
                      title: {
                          display: true,
                          text: 'Valores'
                      },
                      min: 0, // Limite inferior del eje Y
                      max: 70, // Limite superior del eje Y
                  }
              }
          }
      });
  
      // Función para simular datos de sensores
      function simulateSensorData() {
          const now = new Date().toLocaleTimeString();
          const randomTemperature = (Math.random() * 10 + 20).toFixed(2); // Temperatura entre 20°C y 30°C
          const randomHumidity = (Math.random() * 20 + 50).toFixed(2); // Humedad entre 50% y 70%
  
          // Agregar datos al gráfico
          sensorChart.data.labels.push(now);
          sensorChart.data.datasets[0].data.push(randomTemperature);
          sensorChart.data.datasets[1].data.push(randomHumidity);
  
          // Limitar el gráfico a los últimos 10 puntos
          if (sensorChart.data.labels.length > 10) {
              sensorChart.data.labels.shift();
              sensorChart.data.datasets[0].data.shift();
              sensorChart.data.datasets[1].data.shift();
          }
  
          // Actualizar el gráfico
          sensorChart.update();
      }
  
      // Actualizar datos cada 2 segundos
      setInterval(simulateSensorData, 2000);
  </script>  
</body>
</html>
